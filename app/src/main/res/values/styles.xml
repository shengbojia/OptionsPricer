<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleButtonStyle">
        <item name="android:paddingTop">@dimen/padding_title_button</item>
        <item name="android:paddingBottom">@dimen/padding_title_button</item>
        <item name="android:layout_width">@dimen/width_title_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="InputLabelStyle">
        <item name="android:layout_width">@dimen/width_calc_inputlabel</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_calc_inputlabel</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textsize_calc_inputlabel</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="InputErrorStyle">
        <item name="android:layout_width">@dimen/width_calc_inputlabel</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_calc_inputlabel</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:layout_width">@dimen/width_calc_inputfield</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_calc_inputlabel</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="OutputFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/width_calc_outputfield</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/padding_title_button</item>
        <item name="android:paddingBottom">@dimen/padding_title_button</item>
    </style>

</resources>
